@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log In";
}
<link href="~/css/signin.css" rel="stylesheet" />
<div class="text-center">
    

    <div class="form-signin">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">@ViewData["Title"]</h1>
            <label asp-for="UserName" class="sr-only"></label>
            <input asp-for="UserName" class="form-control" placeholder="Username" required="" autofocus="">
            <label asp-for="Password" class="sr-only">Password</label>
            <input asp-for="Password"  class="form-control" placeholder="Password" required="">
            <div class="checkbox mb-2">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Log in</button>
            <p>
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>
        </form>
        
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



